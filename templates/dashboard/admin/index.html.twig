{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
    <section class="breadcrumbs-custom">
        <div class="breadcrumbs-custom__aside bg-image context-dark" style="background-image: url(/images/bg-image-1-1920x238.jpg);">
            <div class="container">
                <h2 class="breadcrumbs-custom__title">{{ block('title') }}</h2>
            </div>
        </div>
    </section>

    <!-- ======= Featured Section ======= -->
    <section id="dashboard" class="dashboard">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="icon-box">
                        <i class="bi bi-people-fill"></i>
                        <h3><a href="">{{clients}} Utilisateurs</a></h3>
                    </div>
                </div>
                <div class="col">
                    <div class="icon-box">
                        <i class="bi bi-file-earmark-pdf-fill"></i>
                        <h3><a href="">{{factures}} Factures</a></h3>
                    </div>
                </div>
                <div class="col">
                    <div class="icon-box">
                        <i class="bi bi-alarm-fill"></i>
                        <h3><a href="">{{clients}} Interventions</a></h3>
                    </div>
                </div>
                <div class="col">
                    <div class="icon-box">
                        <i class="bi bi-emoji-heart-eyes-fill"></i>
                        <h3><a href="">{{clients}} Témoignages</a></h3>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Featured Section -->

    <section class="auth">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="info-box mb-4">
                        <div class="container mt-3">
                            <h4 class="mb-5">Modifier une catégorie</h4>
                            {{ render_chart(chart) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    
{% endblock %}
