<div id="ajout-commentaire" class="reply-form">
  <h4 class="mb-5">Laisser un commentaire</h4>
  {% if is_granted("ROLE_USER") %}
    {% for label, messages in app.flashes %}
      <div class="alert alert-{{ label }}">
        {% for message in messages %}
          <i class="fa-solid fa-circle-info"></i> {{ message | raw }}    
        {% endfor %}
      </div>
    {% endfor %}
    {{ form_start(form) }}
      <div class="row">
        <div class="col form-group">
          {{ form_widget(form.contenu) }}
        </div>
      </div>
      <button type="submit" class="btn">Publier votre commentaire</button>
        {{ form_end(form) }}
  {% else %}
    <div class="col-12 text-center">
      <a href="{{ path('app_login') }}" class="btn mt-5 mb-5">Veuillez vous connecter</a>
    </div>
    
  {% endif %}
</div>