{% extends 'base.html.twig' %}

{% block title %}Edit Comments{% endblock %}

{% block body %}

    <section class="breadcrumbs-custom">
        <div class="breadcrumbs-custom__aside bg-image context-dark" style="background-image: url(/images/bg-image-1-1920x238.jpg);">
            <div class="container">
                <h2 class="breadcrumbs-custom__title">{{ block('title') }}</h2>
            </div>
        </div>
    </section>

    <section class="auth">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="info-box mb-4">
                        <div class="container mt-3">
                            {% for label, messages in app.flashes %}
                                <div class="alert alert-{{ label }}">
                                    {% for message in messages %}
                                        <i class="fa-solid fa-circle-info"></i> {{ message | raw }}    
                                    {% endfor %}
                                </div>
                            {% endfor %}
                            <h4 class="mb-5">Modifier le commentaire</h4>
                            {{ include('blog/admin/commentaires/_form.html.twig', {'button_label': 'Modifier le commentaire'}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    


{% endblock %}
