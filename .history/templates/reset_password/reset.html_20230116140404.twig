{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

<section class="breadcrumbs-custom">
        <div class="breadcrumbs-custom__aside bg-image context-dark" style="background-image: url(/images/bg-image-1-1920x238.jpg);">
            <div class="container">
                <h2 class="breadcrumbs-custom__title">{{ block('title') }}</h2>
            </div>
        </div>
    </section>

    <section class="auth">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="info-box mb-4">
                        <div class="row mt-5 justify-content-center">
                            <a href="" class="btn-large btn-facebook col-5"><i class="fab fa-facebook-f" style="padding-right:10px; font-size: 1em;"></i>Facebook</a>
                            <a href="" class="btn-google btn-large col-5"><i class="fab fa-google-plus-g" style="padding-right:10px; font-size: 1em;"></i>Google</a>
                        </div>
                        <div class="container mt-3">
                            <div class="text-decoration-lines mb-5">
                                <span class="text-decoration-lines__content">ou</span>
                            </div>

                            {{ form_start(resetForm) }}
                            {% for label, messages in app.flashes %}
                            <div class="alert alert-{{ label }}">
                                {% for message in messages %}
                                    <i class="fa-solid fa-circle-info"></i> {{ message | raw }}    
                                {% endfor %}
                            </div>
                        {% endfor %}

                                <div class="input-field mb-4">
                                    {{ form_widget(resetForm.plainPassword.first) }}
                                </div>
                                <div class="input-field mb-4">
                                    {{ form_widget(resetForm.plainPassword.second) }}                                    
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                </div>
                                <button type="submit" class="btn capital col-12 mb-3">Me connecter</button>
                            {{ form_end(resetForm) }}
                            <div class="input-field mb-4 text-center">
                                <a href="{{ path('app_register') }}">Je n'ai aucun compte</a> | <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
